{
  // Version of the setting file.  Always 0.2
  "version": "0.2",
  "gitignoreRoot": ".",
  "useGitignore": true,
  // language - current active spelling language
  "language": "de",
  "import": ["@cspell/dict-de-de/cspell-ext.json"],
  "dictionaries": [
    "css",
    "html",
    "fonts",
    "typescript",
    "softwareTerms",
    "companies",
    "lorem-ipsum",
    "project-words"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "noSuggest": true
    }
  ],
  "ignorePaths": [
    "node_modules/**",
    "static/**",
    "package.json",
    "package-lock.json",
    "project-words.txt",
    "src/**",
    "benachrichtigungen-new.mdx",
    "tech-stack.md",
    "docusaurus.config.ts",
    "_publish_process_articles_chart.mdx"
  ]
}
